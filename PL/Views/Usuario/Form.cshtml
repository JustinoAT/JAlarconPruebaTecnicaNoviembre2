@model ML.Usuario
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<div class="text-center">
    <h2 class="display-6">Formulario</h2>
</div>
<br>
@using (Html.BeginForm("Form", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="row">
        <div class="col-md-3">
            @Html.HiddenFor(model => model.IdUsuario)


            @Html.LabelFor(model => model.Nombre)
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
        </div>
        <div class="col-md-3">

            @Html.LabelFor(model => model.ApellidoPaterno)
            @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control" })
        </div>
        <div class="col-md-3">

            @Html.LabelFor(model => model.ApellidoMaterno)
            @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control" })
        </div>
        <div class="col-md-3">

            @Html.LabelFor(model => model.Nacionalidad)
            @Html.TextBoxFor(model => model.Nacionalidad, new { @class = "form-control" })
        </div>
        <div class="col-md-3">

            @Html.LabelFor(model => model.Edad)
            @Html.TextBoxFor(model => model.Edad, new { @class = "form-control" })
        </div>
    </div>

    <br>
    <div class="text-center">
        <button class="btn btn-success" type="submit"><i></i> Guardar</button>
        <a class="btn btn-danger" href="@Url.Action("GetAll", "Usuario")"><i></i> Volver</a>
    </div>
    <br>




}
